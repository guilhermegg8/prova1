<div class="container">
        <h1>Tela de Edição</h1>
        {{#each posts}}
        {{#dataValues}}
        <form action="/atualizar/{{id}}" method="post">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome" value="{{nome}}" placeholder="Digite o nome">
            </div>
            <div class="form-group">
                <label for="endereco">Endereço:</label>
                <input type="text" class="form-control" id="endereco"  name="endereco" value="{{endereco}}" placeholder="Digite o endereço">
            </div>
            <div class="form-group">
                <label for="bairro">Bairro:</label>
                <input type="text" class="form-control" id="bairro" placeholder="Digite o bairro" name="bairro" value="{{bairro}}">
            </div>
            <div class="form-group">
                <label for="cep">CEP:</label>
                <input type="text" class="form-control" id="cep" name="cep" value="{{cep}}" placeholder="Digite o CEP">
            </div>
            <div class="form-group">
                <label for="cidade">Cidade:</label>
                <input type="text" class="form-control" id="cidade" name="cidade" value="{{cidade}}" placeholder="Digite a cidade">
            </div>
            <div class="form-group">
                <label for="estado">Estado:</label>
                <input type="text" class="form-control" id="estado" name="estado" value="{{estado}}" placeholder="Digite o estado">
            </div>
            <a href="/atualizar/{{id}}"> <button type="submit" class="btn btn-primary">Salvar</button> </a>
        </form>
        {{/dataValues}}
        {{/each}}
    </div>